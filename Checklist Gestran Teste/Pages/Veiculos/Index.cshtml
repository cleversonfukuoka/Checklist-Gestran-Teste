@page
@model Checklist_Gestran_Teste.Pages.Veiculos.IndexModel
@{
}

@{
    ViewData["Title"] = "Veículos";
}

<h1>Veículos</h1>

<div>
    <form method="post">
        <input type="hidden" asp-for="Veiculo.Id" />
        <div class="form-group">
            <label asp-for="Veiculo.Modelo"></label>
            <input asp-for="Veiculo.Modelo" class="form-control" />
            <span asp-validation-for="Veiculo.Placa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Veiculo.Placa"></label>
            <input asp-for="Veiculo.Placa" class="form-control" />
            <span asp-validation-for="Veiculo.Placa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Veiculo.Ano"></label>
            <input asp-for="Veiculo.Ano" class="form-control" />
            <span asp-validation-for="Veiculo.Ano" class="text-danger"></span>
        </div>
        <p></p>
        <button type="submit" class="btn btn-primary">@Model.ButtonText</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Placa</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veiculo in Model.Veiculos)
        {
            <tr>
                <td>@veiculo.Id</td>
                <td>@veiculo.Placa</td>
                <td>@veiculo.Modelo</td>
                <td>@veiculo.Ano</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page-handler="Edit" asp-route-id="@veiculo.Id">Editar</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@veiculo.Id" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}