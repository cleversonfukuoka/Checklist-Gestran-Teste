@page
@model Checklist_Gestran_Teste.Pages.ItensInspecao.IndexModel
@{
}

@{
    ViewData["Title"] = "Itens de Inspeção";
}

<h1>Itens de Inspeção</h1>

<div>
    <form method="post">
        <input type="hidden" asp-for="ItemInspecao.Id" />
        <div class="form-group">
            <label asp-for="ItemInspecao.Descricao"></label>
            <input asp-for="ItemInspecao.Descricao" class="form-control" />
            <span asp-validation-for="ItemInspecao.Descricao" class="text-danger"></span>
        </div>        
        <p></p>
        <button type="submit" class="btn btn-primary">@Model.ButtonText</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descrição</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itens in Model.ItensInspecao)
        {
            <tr>
                <td>@itens.Descricao</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page-handler="Edit" asp-route-id="@itens.Id">Editar</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@itens.Id" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}